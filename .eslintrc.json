{
    "env": {
        "es2021": true,
        "worker": true,
        "browser": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "eslint:recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "parser": "@babel/eslint-parser"
    },
    "globals": {
        "GPUShaderStage": "readonly",
        "GPUBufferUsage": "readonly",
        "GPUTextureUsage": "readonly",
        "GPUMapMode": "readonly",
        "GPUAddressMode": "readonly"
    },
    "plugins": ["vue"]
}